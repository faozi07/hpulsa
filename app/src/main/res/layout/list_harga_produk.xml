<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layItemListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tJnsProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Produk"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="13dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tProvider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="provider"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tKodeProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="kode"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tNomProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nominal"
                android:textColor="@color/blue"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tHrgProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="harga"
                android:textSize="12dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/tHrgJual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hrg jual"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tStok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="tersedia"
                android:textSize="12dp" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>