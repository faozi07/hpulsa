<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/background_white"
    android:orientation="vertical"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Nominal transfer"
                android:textAlignment="center"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tJmlBayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Rp. 0"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tglDeposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="tanggal"
                android:textAlignment="center"
                android:textSize="13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Jumlah transfer harus sesuai dengan nominal diatas"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/imgBank"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_logo_bca" />

            <TextView
                android:id="@+id/tnoRek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="norek"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tAtasNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="a/n ddd"
                android:textAlignment="center"
                android:textSize="15dp" />

        </LinearLayout>
    </ScrollView>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnSimpanSS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_above="@+id/btnBayar"
        android:gravity="center"
        android:padding="7dp"
        app:fb_borderWidth="2dp"
        app:fb_borderColor="@color/colorPrimary"
        app:fb_defaultColor="@color/putih"
        app:fb_focusColor="@color/colorPrimary"
        app:fb_radius="8dp"
        app:fb_text="Simpan"
        app:fb_textColor="@color/colorPrimary"
        app:fb_textSize="17dp" />
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnBayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="7dp"
        app:fb_borderWidth="1dp"
        app:fb_defaultColor="@color/colorPrimary"
        app:fb_focusColor="@color/orangeDark"
        app:fb_radius="8dp"
        app:fb_text="Bayar Sekarang"
        app:fb_textColor="#fff"
        app:fb_textSize="17dp" />
</RelativeLayout>
