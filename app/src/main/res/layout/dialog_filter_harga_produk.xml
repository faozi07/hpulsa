<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/laySemuaproduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="2dp"
        android:layout_marginBottom="10dp">
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinJnsProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:entries="@array/menu_produk"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/laySubProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="2dp"
        android:layout_marginBottom="10dp">
        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/spinSubProduk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/sub_all"
            android:background="#fff"/>
    </LinearLayout>
    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        app:fb_borderColor="@color/colorPrimary"
        app:fb_borderWidth="1dp"
        app:fb_defaultColor="@android:color/transparent"
        app:fb_focusColor="@color/colorPrimary"
        app:fb_radius="0dp"
        app:fb_text="TUTUP"
        app:fb_textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>